{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "jsx": "preserve",
    "target": "es2019",
    "lib": [
      "ESNext", "DOM"
    ],

    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
  ],
  "include": [ 
    "src",
    "**/*.d.ts"
    , "../lib/component/demo-block/useRefTemplate.ts"  ]
}
 