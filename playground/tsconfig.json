{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "jsx": "preserve",
    "target": "esnext",
    "lib": [
      "esnext", "DOM"
    ],
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client"]
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src"
  ]
}
