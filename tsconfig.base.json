{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "lib": ["es2020", "DOM"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "es2020",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noImplicitThis": true, // 对包含“any”类型的“this”表达式提出错误。
    "suppressImplicitAnyIndexErrors": true, // 阻止--noImplicitAny对缺少索引签名的索引对象报错。
    "strictNullChecks": true, // 启用严格的空检查
    "strictFunctionTypes": true, // 启用对函数类型的严格检查。
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
}
