{
  "name": "@poyoho/ui-elements",
  "private": true,
  "version": "0.0.6",
  "description": "web components library",
  "scripts": {
    "bootstrap": "yarn --frozen-lockfile && npx lerna bootstrap",
    "build": "node scripts/build.js",
    "release": "node scripts/release.js"
  },
  "author": "poyoho",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "web components",
    "monaco"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,jsx,json}": [
      "eslint --fix --ext .js,.ts,.tsx,.jsx"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "packages",
    "lib"
  ],
  "main": "lib/ui-elements/index.js",
  "types": "lib/ui-elements/index.d.ts",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@poyoho/eslint-plugin-config": "^0.0.2",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-dynamic-import-vars": "^1.4.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "chalk": "^4.1.0",
    "commitizen": "^4.2.2",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.12.19",
    "lerna": "^4.0.0",
    "rollup": "^2.44.0",
    "rollup-plugin-dts": "^3.0.1",
    "rollup-plugin-esbuild": "^4.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "semver": "^7.3.5",
    "typescript": "^4.1.2"
  }
}
